<?xml version="1.0" encoding="UTF-8"?>

<?import com.github.fx.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="biggestAnchorPaneInTheWorld" prefHeight="600" prefWidth="1150"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.visual.MainWindow">
    <VBox prefWidth="250" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER">
            <Label text="x₁"/>
            <DoubleTextField fx:id="textX1" text="-2"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER">
            <Label text="x₂"/>
            <DoubleTextField fx:id="textX2" text="1"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER">
            <Label text="y₁"/>
            <DoubleTextField fx:id="textY1" text="-1"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER">
            <Label text="y₂"/>
            <DoubleTextField fx:id="textY2" text="1"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label text="ITERATONS"/>
            <TextField fx:id="textMaxIter" text="50"/>
        </HBox>
        <HBox alignment="CENTER">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <Button fx:id="buttonUndo" disable="true" mnemonicParsing="false" onAction="#onClickUndo" text="undo">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="buttonRedo" disable="true" mnemonicParsing="false" onAction="#onClickRedo" text="redo">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <Button mnemonicParsing="false" onAction="#onClickPrint" text="print">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Button>
        <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onClickPrintReset" text="reset">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Button>
        <ProgressBar fx:id="progressBar" progress="0.0"
                     prefWidth="250">
            <VBox.margin>
                <Insets left="10.0" right="10.0"/>
            </VBox.margin>
        </ProgressBar>
        <Label fx:id="progressLabel"/>
    </VBox>
    <Pane fx:id="pane" AnchorPane.leftAnchor="250" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <ImageView fx:id="imageView"/>
        <Canvas fx:id="canvas"/>
    </Pane>
</AnchorPane>
